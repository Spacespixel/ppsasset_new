    <!-- SUPER SIMPLE Dropdown JavaScript -->
    <script>
    function toggleDropdown(event) {
        event.preventDefault();
        event.stopPropagation();
        
        var dropdown = document.getElementById('project-dropdown');
        dropdown.classList.toggle('active');
        console.log('Dropdown toggled, active:', dropdown.classList.contains('active'));
    }
    
    // Mobile navigation toggle
    document.addEventListener('DOMContentLoaded', function() {
        const navBtn = document.querySelector('.nav-btn');
        const navigation = document.querySelector('.navigation');
        
        if (navBtn && navigation) {
            navBtn.addEventListener('click', function(e) {
                e.preventDefault();
                navigation.classList.toggle('show-navigation');
                document.body.classList.toggle('show-navigation');
            });
        }
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('#project-dropdown')) {
                const dropdown = document.getElementById('project-dropdown');
                if (dropdown) {
                    dropdown.classList.remove('active');
                }
            }
        });
    });
    </script>
    
