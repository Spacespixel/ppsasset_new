                            if (recaptchaMessage) {
                                recaptchaMessage.textContent = 'Google reCAPTCHA - ยืนยันแล้ว ✓';
                            }
                            // Enable submit button once reCAPTCHA is verified
                            if (registrationSubmitBtn) {
