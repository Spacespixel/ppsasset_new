@functions {
    private string GetCategoryIconPath(string category)
    {
        return category switch
        {
            // Transportation
            _ when category.Contains("การเดินทาง") || category.Contains("transport") =>
                "~/images/icons/category-transportation.svg",

            // Shopping malls
            _ when category.Contains("ห้างสรรพสินค้า") || category.Contains("shopping") || category.Contains("mall") =>
                "~/images/icons/category-shopping.svg",

            // Hospital
            _ when category.Contains("สถานพยาบาล") || category.Contains("hospital") || category.Contains("medical") =>
                "~/images/icons/category-hospital.svg",

            // Education/School
            _ when category.Contains("สถานศึกษา") || category.Contains("school") || category.Contains("education") =>
                "~/images/icons/category-school.svg",

            // Park/Recreation
            _ when category.Contains("สวน") || category.Contains("park") || category.Contains("tree") =>
                "~/images/icons/category-park.svg",

            // Default
            _ => "~/images/icons/category-location.svg"
        };
    }
}

