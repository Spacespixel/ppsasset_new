<script>
document.addEventListener('DOMContentLoaded', function() {
    // Mobile navigation toggle
    const navBtn = document.querySelector('.nav-btn');
    const navigation = document.querySelector('.navigation');
    const pageWrapper = document.body; // or document.querySelector('.page-wrapper') if exists
    
    if (navBtn && navigation) {
        navBtn.addEventListener('click', function(e) {
            e.preventDefault();
            navigation.classList.toggle('show-navigation');
            pageWrapper.classList.toggle('show-navigation');
        });
        
        // Close mobile menu when clicking on overlay
        navigation.addEventListener('click', function(e) {
            if (e.target === navigation && navigation.classList.contains('show-navigation')) {
                navigation.classList.remove('show-navigation');
                pageWrapper.classList.remove('show-navigation');
            }
        });
        
        // Close mobile menu when clicking outside
        document.addEventListener('click', function(e) {
            if (!navigation.contains(e.target) && navigation.classList.contains('show-navigation')) {
                navigation.classList.remove('show-navigation');
                pageWrapper.classList.remove('show-navigation');
            }
        });
    }
    
    // Mobile dropdown functionality
    const dropdownToggles = document.querySelectorAll('.dropdown-toggle');
    
    dropdownToggles.forEach(function(toggle) {
        toggle.addEventListener('click', function(e) {
            e.preventDefault();
            
            // Only handle mobile dropdown behavior
            if (window.innerWidth <= 768) {
                const dropdown = this.closest('.dropdown');
                
                // Close other dropdowns
                dropdownToggles.forEach(function(otherToggle) {
                    if (otherToggle !== toggle) {
                        otherToggle.closest('.dropdown').classList.remove('active');
                    }
                });
                
                // Toggle current dropdown
                dropdown.classList.toggle('active');
            }
        });
    });
    
    // Handle window resize
    window.addEventListener('resize', function() {
        if (window.innerWidth > 768) {
            // Reset mobile states on desktop
            navigation.classList.remove('show-navigation');
            pageWrapper.classList.remove('show-navigation');
            document.querySelectorAll('.dropdown').forEach(function(dropdown) {
                dropdown.classList.remove('active');
            });
        }
    });
    
    // Handle dropdown menu items clicks in mobile
    const dropdownMenuLinks = document.querySelectorAll('.dropdown-menu a');
    dropdownMenuLinks.forEach(function(link) {
        link.addEventListener('click', function() {
            // Close mobile menu when clicking a project link
            if (window.innerWidth <= 768) {
                setTimeout(function() {
                    navigation.classList.remove('show-navigation');
                    pageWrapper.classList.remove('show-navigation');
                }, 100);
            }
        });
    });
    
    // Prevent dropdown menu from closing when clicking inside dropdown (desktop)
    const dropdownMenus = document.querySelectorAll('.dropdown-menu');
    dropdownMenus.forEach(function(menu) {
        menu.addEventListener('click', function(e) {
            if (window.innerWidth > 768) {
                e.stopPropagation();
            }
        });
    });
    
    // Improve keyboard navigation
    document.addEventListener('keydown', function(e) {
        // Close mobile menu with Escape key
        if (e.key === 'Escape' && navigation.classList.contains('show-navigation')) {
            navigation.classList.remove('show-navigation');
            pageWrapper.classList.remove('show-navigation');
            navBtn.focus();
        }
        
        // Handle Enter and Space key for dropdown toggles
        if ((e.key === 'Enter' || e.key === ' ') && e.target.classList.contains('dropdown-toggle')) {
            e.preventDefault();
            e.target.click();
        }
    });
    
    // Close dropdowns when clicking elsewhere (desktop)
    document.addEventListener('click', function(e) {
        if (window.innerWidth > 768) {
            if (!e.target.closest('.dropdown')) {
                document.querySelectorAll('.dropdown').forEach(function(dropdown) {
                    dropdown.classList.remove('active');
                });
            }
        }
    });
});
</script>

 