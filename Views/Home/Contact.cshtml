/* Contact Form Styling */
.contact-form {
    background: #f8f9fa;
    padding: 40px 30px;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    height: fit-content;
}

.contact-form h3 {
    color: #365523;
    margin-bottom: 25px;
    font-weight: 600;
    text-align: center;
}

.contact-form .form-group {
    margin-bottom: 20px;
}

.contact-form .form-control {
    border: 2px solid #e0e0e0;
    border-radius: 6px;
    padding: 12px 15px;
    font-size: 15px;
    transition: border-color 0.3s ease;
}

.contact-form .form-control:focus {
    border-color: #365523;
    box-shadow: 0 0 0 0.2rem rgba(54, 85, 35, 0.25);
}

/* Contact Page Specific Styles */
.btn-submit-form {
    background: #365523;
    color: white;
    padding: 12px 25px;
    border: none;
    border-radius: 30px;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: block;
    margin: 0 auto;
    max-width: 400px;
    width: 100%;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.btn-submit-form:hover {
    background: #1e7e34;
}

/* Social Media Brand Green Color */
.social-links .social-link {
    color: #365523 !important;
    text-decoration: none;
    display: block;
    margin-bottom: 10px;
    font-weight: 500;
    font-size: 16px;
    transition: color 0.3s ease;
}

.social-links .social-link:hover {
    color: #1e7e34 !important;
}

.social-links .social-link:hover svg path {
    fill: #1e7e34 !important;
}

/* Contact Information Styling */
.company-name {
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 2px solid #365523;
}

.company-name h4 {
    color: #365523;
    font-size: 22px;
    font-weight: 700;
    margin: 0;
    font-family: 'Kanit', sans-serif;
}

.contact-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 20px;
    padding: 15px;
    background: #f8f9fa;
    border-radius: 8px;
    border-left: 4px solid #365523;
    transition: all 0.3s ease;
}

.contact-item:hover {
    background: #e8f5e8;
    transform: translateX(5px);
    box-shadow: 0 2px 8px rgba(54, 85, 35, 0.1);
}

.contact-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    background: rgba(54, 85, 35, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 15px;
}

.contact-icon svg {
    transition: transform 0.3s ease;
}

.contact-item:hover .contact-icon svg {
    transform: scale(1.1);
}

.contact-details {
    flex: 1;
    min-width: 0;
}

.contact-label {
    font-size: 14px;
    font-weight: 600;
    color: #365523;
    margin-bottom: 5px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-family: 'Kanit', sans-serif;
}

.contact-text {
    color: #555;
    font-size: 15px;
    line-height: 1.6;
    margin: 0;
    font-weight: 400;
}

.contact-text a {
    color: #365523;
    text-decoration: none;
}

.contact-text a:hover {
    text-decoration: underline;
}

/* Responsive Design for Contact Items */
@@media (max-width: 768px) {
